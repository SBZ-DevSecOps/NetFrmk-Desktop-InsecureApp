<Window x:Class="NetFrmk_Desktop_InsecureApp.DA07UnsafeApiWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title=""
        Height="1000" Width="1600"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Compact variants (assume RoundedTextBox / RoundedButton exist in App resources) -->
        <Style x:Key="RoundedTextBoxCompact" TargetType="TextBox" BasedOn="{StaticResource RoundedTextBox}">
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="MinWidth" Value="180"/>
            <Setter Property="MaxWidth" Value="260"/>
            <Setter Property="Margin" Value="0,6,0,6"/>
        </Style>
        <Style x:Key="RoundedButtonCompact" TargetType="Button" BasedOn="{StaticResource RoundedButton}">
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="MinWidth" Value="160"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16">

            <!-- Header / Language -->
            <DockPanel Margin="0,0,0,12">
                <TextBlock x:Name="TitleText" DockPanel.Dock="Left" FontSize="20" FontWeight="Bold"
                   Foreground="{DynamicResource DA07Panel7}"/>
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Border CornerRadius="6" Padding="6,2" BorderThickness="1"
                  BorderBrush="{DynamicResource DA07Panel7}" Background="{DynamicResource DA07Panel2}" Margin="8,0,0,0">
                        <ComboBox x:Name="LanguageSelector" Width="140" SelectionChanged="LanguageSelector_Changed">
                            <ComboBoxItem>English</ComboBoxItem>
                            <ComboBoxItem>Français</ComboBoxItem>
                        </ComboBox>
                    </Border>
                </StackPanel>
            </DockPanel>

            <TextBlock x:Name="IntroText" Margin="0,0,0,16" Foreground="{DynamicResource DA07Panel7}"/>

            <!-- 15 cards (5×3) -->
            <UniformGrid Columns="5" Rows="3">

                <!-- 1 Unsafe Buffer -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA07Panel2}" Background="{DynamicResource DA07Panel7}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="UnsafeBufferLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA07Panel2}"/>
                        <TextBlock Name="UnsafeBufferDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="UnsafeBufferInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button Name="UnsafeBufferButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA07Panel2}" Foreground="#212121"
                    Click="UnsafeBufferButton_Click"/>
                        <TextBlock Name="UnsafeBufferResult" Margin="8,8,0,0" Foreground="{DynamicResource DA07Panel2}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 2 BinaryFormatter -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA07Panel3}" Background="{DynamicResource DA07Panel6}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="BinaryFormatterLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA07Panel3}"/>
                        <TextBlock Name="BinaryFormatterDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="BinaryFormatterInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button Name="BinaryFormatterButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA07Panel3}" Foreground="#212121"
                    Click="BinaryFormatterButton_Click"/>
                        <TextBlock Name="BinaryFormatterResult" Margin="8,8,0,0" Foreground="{DynamicResource DA07Panel3}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 3 Integer Overflow -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA07Panel4}" Background="{DynamicResource DA07Panel5}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="IntOverflowLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA07Panel4}"/>
                        <TextBlock Name="IntOverflowDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="IntOverflowInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button Name="IntOverflowButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA07Panel4}" Foreground="#212121"
                    Click="IntOverflowButton_Click"/>
                        <TextBlock Name="IntOverflowResult" Margin="8,8,0,0" Foreground="{DynamicResource DA07Panel4}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 4 P/Invoke -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA07Panel5}" Background="{DynamicResource DA07Panel4}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="PInvokeLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA07Panel5}"/>
                        <TextBlock Name="PInvokeDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="PInvokeInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button Name="PInvokeButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA07Panel5}" Foreground="#212121"
                    Click="PInvokeButton_Click"/>
                        <TextBlock Name="PInvokeResult" Margin="8,8,0,0" Foreground="{DynamicResource DA07Panel5}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 5 Eval -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA07Panel6}" Background="{DynamicResource DA07Panel3}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="EvalLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA07Panel6}"/>
                        <TextBlock Name="EvalDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="EvalInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button Name="EvalButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA07Panel6}" Foreground="#212121"
                    Click="EvalButton_Click"/>
                        <TextBlock Name="EvalResult" Margin="8,8,0,0" Foreground="{DynamicResource DA07Panel6}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 6 Race -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA07Panel7}" Background="{DynamicResource DA07Panel2}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="RaceLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA07Panel7}"/>
                        <TextBlock Name="RaceDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="RaceInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button Name="RaceButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA07Panel7}" Foreground="#212121"
                    Click="RaceButton_Click"/>
                        <TextBlock Name="RaceResult" Margin="8,8,0,0" Foreground="{DynamicResource DA07Panel7}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 7 Stack overflow -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA07Panel2}" Background="{DynamicResource DA07Panel7}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="StackLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA07Panel2}"/>
                        <TextBlock Name="StackDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="StackInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button Name="StackButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA07Panel2}" Foreground="#212121"
                    Click="StackButton_Click"/>
                        <TextBlock Name="StackResult" Margin="8,8,0,0" Foreground="{DynamicResource DA07Panel2}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 8 Regex ReDoS (2 inputs) -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA07Panel3}" Background="{DynamicResource DA07Panel6}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="RegexLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA07Panel3}"/>
                        <TextBlock Name="RegexDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="RegexPatternInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <TextBox Name="RegexTextInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button Name="RegexButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA07Panel3}" Foreground="#212121"
                    Click="RegexButton_Click"/>
                        <TextBlock Name="RegexResult" Margin="8,8,0,0" Foreground="{DynamicResource DA07Panel3}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 9 XXE -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA07Panel4}" Background="{DynamicResource DA07Panel5}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="XxeLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA07Panel4}"/>
                        <TextBlock Name="XxeDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="XxeInput" Style="{StaticResource RoundedTextBoxCompact}" AcceptsReturn="True" Height="80" TextWrapping="Wrap"/>
                        <Button Name="XxeButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA07Panel4}" Foreground="#212121"
                    Click="XxeButton_Click"/>
                        <TextBlock Name="XxeResult" Margin="8,8,0,0" Foreground="{DynamicResource DA07Panel4}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 10 Reflection (2 inputs) -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA07Panel5}" Background="{DynamicResource DA07Panel4}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="ReflectLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA07Panel5}"/>
                        <TextBlock Name="ReflectDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="ReflectTypeInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <TextBox Name="ReflectMethodInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button Name="ReflectButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA07Panel5}" Foreground="#212121"
                    Click="ReflectButton_Click"/>
                        <TextBlock Name="ReflectResult" Margin="8,8,0,0" Foreground="{DynamicResource DA07Panel5}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 11 Weak Random -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA07Panel6}" Background="{DynamicResource DA07Panel3}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="WeakRndLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA07Panel6}"/>
                        <TextBlock Name="WeakRndDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="WeakRndLenInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button Name="WeakRndButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA07Panel6}" Foreground="#212121"
                    Click="WeakRndButton_Click"/>
                        <TextBlock Name="WeakRndResult" Margin="8,8,0,0" Foreground="{DynamicResource DA07Panel6}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 12 MD5 -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA07Panel7}" Background="{DynamicResource DA07Panel2}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="Md5Label" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA07Panel7}"/>
                        <TextBlock Name="Md5Desc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="Md5Input" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button Name="Md5Button" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA07Panel7}" Foreground="#212121"
                    Click="Md5Button_Click"/>
                        <TextBlock Name="Md5Result" Margin="8,8,0,0" Foreground="{DynamicResource DA07Panel7}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 13 ZipSlip (2 inputs) -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA07Panel2}" Background="{DynamicResource DA07Panel7}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="ZipSlipLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA07Panel2}"/>
                        <TextBlock Name="ZipSlipDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="ZipPathInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <TextBox Name="ZipDestInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button Name="ZipSlipButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA07Panel2}" Foreground="#212121"
                    Click="ZipSlipButton_Click"/>
                        <TextBlock Name="ZipSlipResult" Margin="8,8,0,0" Foreground="{DynamicResource DA07Panel2}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 14 Shell Exec -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA07Panel3}" Background="{DynamicResource DA07Panel6}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="ShellLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA07Panel3}"/>
                        <TextBlock Name="ShellDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="ShellInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button Name="ShellButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA07Panel3}" Foreground="#212121"
                    Click="ShellButton_Click"/>
                        <TextBlock Name="ShellResult" Margin="8,8,0,0" Foreground="{DynamicResource DA07Panel3}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 15 SoapFormatter -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA07Panel4}" Background="{DynamicResource DA07Panel5}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="SoapLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA07Panel4}"/>
                        <TextBlock Name="SoapDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="SoapFormatterInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button Name="SoapButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA07Panel4}" Foreground="#212121"
                    Click="SoapButton_Click"/>
                        <TextBlock Name="SoapResult" Margin="8,8,0,0" Foreground="{DynamicResource DA07Panel4}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

            </UniformGrid>
        </StackPanel>
    </ScrollViewer>
</Window>
