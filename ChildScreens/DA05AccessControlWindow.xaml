<Window x:Class="NetFrmk_Desktop_InsecureApp.DA05AccessControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title=""
        Height="1000" Width="1600"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Compact variants (for 5×3 cards) -->
        <Style x:Key="RoundedTextBoxCompact" TargetType="TextBox" BasedOn="{StaticResource RoundedTextBox}">
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="MinWidth" Value="180"/>
            <Setter Property="MaxWidth" Value="260"/>
            <Setter Property="Margin" Value="0,6,0,6"/>
        </Style>
        <Style x:Key="RoundedButtonCompact" TargetType="Button" BasedOn="{StaticResource RoundedButton}">
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="MinWidth" Value="160"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16">

            <!-- Header / Language -->
            <DockPanel Margin="0,0,0,12">
                <TextBlock x:Name="TitleText" DockPanel.Dock="Left" FontSize="20" FontWeight="Bold"
                   Foreground="{DynamicResource DA05Panel7}"/>
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Border CornerRadius="6" Padding="6,2" BorderThickness="1"
                  BorderBrush="{DynamicResource DA05Panel7}" Background="{DynamicResource DA05Panel2}" Margin="8,0,0,0">
                        <ComboBox x:Name="LanguageSelector" Width="140" SelectionChanged="LanguageSelector_Changed">
                            <ComboBoxItem>English</ComboBoxItem>
                            <ComboBoxItem>Français</ComboBoxItem>
                        </ComboBox>
                    </Border>
                </StackPanel>
            </DockPanel>

            <TextBlock x:Name="IntroText" Margin="0,0,0,16" Foreground="{DynamicResource DA05Panel7}"/>

            <!-- Cards 5×3 -->
            <UniformGrid Columns="5" Rows="3">

                <!-- 1 BOLA -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA05Panel2}" Background="{DynamicResource DA05Panel7}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="BolaLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA05Panel2}"/>
                        <TextBlock Name="BolaDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="BolaObjectIdInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button Name="BolaTestButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA05Panel2}" Foreground="#212121"
                    Click="BolaTestButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 2 IDOR -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA05Panel3}" Background="{DynamicResource DA05Panel6}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="FuncAuthLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA05Panel3}"/>
                        <TextBlock Name="FuncAuthDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="FuncAuthInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button Name="FuncAuthTestButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA05Panel3}" Foreground="#212121"
                    Click="FuncAuthTestButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 3 Vertical escalation -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA05Panel4}" Background="{DynamicResource DA05Panel5}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="PrivilegeEscalationLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA05Panel4}"/>
                        <TextBlock Name="PrivilegeEscalationDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="PrivilegeEscalationInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button Name="PrivilegeEscalationTestButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA05Panel4}" Foreground="#212121"
                    Click="PrivilegeEscalationTestButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 4 Horizontal escalation -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA05Panel5}" Background="{DynamicResource DA05Panel4}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="HorizontalEscalationLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA05Panel5}"/>
                        <TextBlock Name="HorizontalEscalationDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="HorizontalEscalationInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button Name="HorizontalEscalationTestButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA05Panel5}" Foreground="#212121"
                    Click="HorizontalEscalationTestButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 5 Forced browsing -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA05Panel6}" Background="{DynamicResource DA05Panel3}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="ForcedBrowsingLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA05Panel6}"/>
                        <TextBlock Name="ForcedBrowsingDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="ForcedInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button Name="ForcedBrowsingTestButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA05Panel6}" Foreground="#212121"
                    Click="ForcedBrowsingTestButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 6 Missing FLAC -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA05Panel7}" Background="{DynamicResource DA05Panel2}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="AuthBypassLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA05Panel7}"/>
                        <TextBlock Name="AuthBypassDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="AuthBypassInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button Name="AuthBypassTestButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA05Panel7}" Foreground="#212121"
                    Click="AuthBypassTestButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 7 Unprotected admin-ish -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA05Panel2}" Background="{DynamicResource DA05Panel7}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="AdminFuncLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA05Panel2}"/>
                        <TextBlock Name="AdminFuncDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="AdminFuncInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button Name="AdminFuncTestButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA05Panel2}" Foreground="#212121"
                    Click="AdminFuncTestButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 8 Event handler -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA05Panel3}" Background="{DynamicResource DA05Panel6}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="EventHandlerLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA05Panel3}"/>
                        <TextBlock Name="EventHandlerDesc" FontSize="12" Margin="0,3"/>
                        <Button Name="EventHandlerTestButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA05Panel3}" Foreground="#212121"
                    Click="EventHandlerTestButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 9 Obscurity -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA05Panel4}" Background="{DynamicResource DA05Panel5}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="ObscurityLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA05Panel4}"/>
                        <TextBlock Name="ObscurityDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="ObscurityInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button Name="ClipboardTestButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA05Panel4}" Foreground="#212121"
                    Click="ClipboardTestButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 10 Role confusion -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA05Panel5}" Background="{DynamicResource DA05Panel4}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="RoleConfusionLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA05Panel5}"/>
                        <TextBlock Name="RoleConfusionDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="RoleConfusionInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button Name="RoleConfusionTestButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA05Panel5}" Foreground="#212121"
                    Click="RoleConfusionTestButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 11 Role/Principal spoofing -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA05Panel6}" Background="{DynamicResource DA05Panel3}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="RoleTamperLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA05Panel6}"/>
                        <TextBlock Name="RoleTamperDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="RoleTamperInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button Name="RoleTamperTestButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA05Panel6}" Foreground="#212121"
                    Click="RoleTamperTestButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 12 AuthN-as-AuthZ -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA05Panel7}" Background="{DynamicResource DA05Panel2}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="AuthnOnlyLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA05Panel7}"/>
                        <TextBlock Name="AuthnOnlyDesc" FontSize="12" Margin="0,3"/>
                        <Button Name="AuthnOnlyTestButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA05Panel7}" Foreground="#212121"
                    Click="AuthnOnlyTestButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 13 Tenant isolation bypass (2 inputs vertical) -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA05Panel2}" Background="{DynamicResource DA05Panel7}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="TenantLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA05Panel2}"/>
                        <TextBlock Name="TenantDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="TenantIdInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <TextBox Name="TenantResourceInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button Name="TenantTestButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA05Panel2}" Foreground="#212121"
                    Click="TenantTestButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 14 Config flag override -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA05Panel3}" Background="{DynamicResource DA05Panel6}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="ConfigFlagLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA05Panel3}"/>
                        <TextBlock Name="ConfigFlagDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="ConfigFlagPathInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button Name="ConfigFlagTestButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA05Panel3}" Foreground="#212121"
                    Click="ConfigFlagTestButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 15 Path prefix policy bypass -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA05Panel4}" Background="{DynamicResource DA05Panel5}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="CasePathLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA05Panel4}"/>
                        <TextBlock Name="CasePathDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="CasePathInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button Name="CasePathTestButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA05Panel4}" Foreground="#212121"
                    Click="CasePathTestButton_Click"/>
                    </StackPanel>
                </Border>

            </UniformGrid>
        </StackPanel>
    </ScrollViewer>
</Window>
