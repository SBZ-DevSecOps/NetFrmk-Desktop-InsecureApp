<Window x:Class="NetFrmk_Desktop_InsecureApp.DA06ResourceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title=""
        Height="1000" Width="1600"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Compact styles (assume RoundedTextBox / RoundedButton exist in App resources) -->
        <Style x:Key="RoundedTextBoxCompact" TargetType="TextBox" BasedOn="{StaticResource RoundedTextBox}">
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="MinWidth" Value="180"/>
            <Setter Property="MaxWidth" Value="260"/>
            <Setter Property="Margin" Value="0,6,0,6"/>
        </Style>
        <Style x:Key="RoundedButtonCompact" TargetType="Button" BasedOn="{StaticResource RoundedButton}">
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="MinWidth" Value="160"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16">

            <!-- Header / Language -->
            <DockPanel Margin="0,0,0,12">
                <TextBlock x:Name="TitleText" DockPanel.Dock="Left" FontSize="20" FontWeight="Bold"
                   Foreground="{DynamicResource DA06Panel7}"/>
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Border CornerRadius="6" Padding="6,2" BorderThickness="1"
                  BorderBrush="{DynamicResource DA06Panel7}" Background="{DynamicResource DA06Panel2}" Margin="8,0,0,0">
                        <ComboBox x:Name="LanguageSelector" Width="140" SelectionChanged="LanguageSelector_Changed">
                            <ComboBoxItem>English</ComboBoxItem>
                            <ComboBoxItem>Français</ComboBoxItem>
                        </ComboBox>
                    </Border>
                </StackPanel>
            </DockPanel>

            <TextBlock x:Name="IntroText" Margin="0,0,0,16" Foreground="{DynamicResource DA06Panel7}"/>

            <!-- 15 cards (5×3) -->
            <UniformGrid Columns="5" Rows="3">

                <!-- 1 -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA06Panel2}" Background="{DynamicResource DA06Panel7}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="VulnDllLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA06Panel2}"/>
                        <TextBlock Name="VulnDllDesc" FontSize="12" Margin="0,3"/>
                        <TextBox  Name="VulnDllInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button   Name="VulnDllButton" Style="{StaticResource RoundedButtonCompact}"
                      Background="{DynamicResource DA06Panel2}" Foreground="#212121"
                      Click="VulnDllButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 2 -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA06Panel3}" Background="{DynamicResource DA06Panel6}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="DynamicLoadLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA06Panel3}"/>
                        <TextBlock Name="DynamicLoadDesc" FontSize="12" Margin="0,3"/>
                        <TextBox  Name="DynamicLoadInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button   Name="DynamicLoadButton" Style="{StaticResource RoundedButtonCompact}"
                      Background="{DynamicResource DA06Panel3}" Foreground="#212121"
                      Click="DynamicLoadButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 3 -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA06Panel4}" Background="{DynamicResource DA06Panel5}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="LoadPluginsLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA06Panel4}"/>
                        <TextBlock Name="LoadPluginsDesc" FontSize="12" Margin="0,3"/>
                        <TextBox  Name="LoadPluginsInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button   Name="LoadPluginsButton" Style="{StaticResource RoundedButtonCompact}"
                      Background="{DynamicResource DA06Panel4}" Foreground="#212121"
                      Click="LoadPluginsButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 4 -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA06Panel5}" Background="{DynamicResource DA06Panel4}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="DownloadExecLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA06Panel5}"/>
                        <TextBlock Name="DownloadExecDesc" FontSize="12" Margin="0,3"/>
                        <TextBox  Name="DownloadExecInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button   Name="DownloadExecButton" Style="{StaticResource RoundedButtonCompact}"
                      Background="{DynamicResource DA06Panel5}" Foreground="#212121"
                      Click="DownloadExecButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 5 -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA06Panel6}" Background="{DynamicResource DA06Panel3}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="ManifestLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA06Panel6}"/>
                        <TextBlock Name="ManifestDesc" FontSize="12" Margin="0,3"/>
                        <TextBox  Name="ManifestInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button   Name="ManifestButton" Style="{StaticResource RoundedButtonCompact}"
                      Background="{DynamicResource DA06Panel6}" Foreground="#212121"
                      Click="ManifestButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 6 -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA06Panel7}" Background="{DynamicResource DA06Panel2}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="UserImportLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA06Panel7}"/>
                        <TextBlock Name="UserImportDesc" FontSize="12" Margin="0,3"/>
                        <TextBox  Name="UserImportInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button   Name="UserImportButton" Style="{StaticResource RoundedButtonCompact}"
                      Background="{DynamicResource DA06Panel7}" Foreground="#212121"
                      Click="UserImportButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 7 -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA06Panel2}" Background="{DynamicResource DA06Panel7}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="DllHijackingLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA06Panel2}"/>
                        <TextBlock Name="DllHijackingDesc" FontSize="12" Margin="0,3"/>
                        <TextBox  Name="DllHijackingInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button   Name="DllHijackingButton" Style="{StaticResource RoundedButtonCompact}"
                      Background="{DynamicResource DA06Panel2}" Foreground="#212121"
                      Click="DllHijackingButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 8 -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA06Panel3}" Background="{DynamicResource DA06Panel6}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="VulnNugetLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA06Panel3}"/>
                        <TextBlock Name="VulnNugetDesc" FontSize="12" Margin="0,3"/>
                        <Button   Name="VulnNugetButton" Style="{StaticResource RoundedButtonCompact}"
                      Background="{DynamicResource DA06Panel3}" Foreground="#212121"
                      Click="VulnNugetButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 9 -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA06Panel4}" Background="{DynamicResource DA06Panel5}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="HttpResourceLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA06Panel4}"/>
                        <TextBlock Name="HttpResourceDesc" FontSize="12" Margin="0,3"/>
                        <TextBox  Name="HttpResourceInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button   Name="HttpResourceButton" Style="{StaticResource RoundedButtonCompact}"
                      Background="{DynamicResource DA06Panel4}" Foreground="#212121"
                      Click="HttpResourceButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 10 -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA06Panel5}" Background="{DynamicResource DA06Panel4}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="PsScriptLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA06Panel5}"/>
                        <TextBlock Name="PsScriptDesc" FontSize="12" Margin="0,3"/>
                        <TextBox  Name="PsScriptInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button   Name="PsScriptButton" Style="{StaticResource RoundedButtonCompact}"
                      Background="{DynamicResource DA06Panel5}" Foreground="#212121"
                      Click="PsScriptButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 11 -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA06Panel6}" Background="{DynamicResource DA06Panel3}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="RelativeDllLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA06Panel6}"/>
                        <TextBlock Name="RelativeDllDesc" FontSize="12" Margin="0,3"/>
                        <TextBox  Name="RelativeDllInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button   Name="RelativeDllButton" Style="{StaticResource RoundedButtonCompact}"
                      Background="{DynamicResource DA06Panel6}" Foreground="#212121"
                      Click="RelativeDllButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 12 -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA06Panel7}" Background="{DynamicResource DA06Panel2}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="PartialNameLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA06Panel7}"/>
                        <TextBlock Name="PartialNameDesc" FontSize="12" Margin="0,3"/>
                        <TextBox  Name="PartialNameInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button   Name="PartialNameButton" Style="{StaticResource RoundedButtonCompact}"
                      Background="{DynamicResource DA06Panel7}" Foreground="#212121"
                      Click="PartialNameButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 13 -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA06Panel2}" Background="{DynamicResource DA06Panel7}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="ResolveHijackLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA06Panel2}"/>
                        <TextBlock Name="ResolveHijackDesc" FontSize="12" Margin="0,3"/>
                        <TextBox  Name="ResolveHijackInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button   Name="ResolveHijackButton" Style="{StaticResource RoundedButtonCompact}"
                      Background="{DynamicResource DA06Panel2}" Foreground="#212121"
                      Click="ResolveHijackButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 14 -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA06Panel3}" Background="{DynamicResource DA06Panel6}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="XamlLoadLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA06Panel3}"/>
                        <TextBlock Name="XamlLoadDesc" FontSize="12" Margin="0,3"/>
                        <TextBox  Name="XamlLoadInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button   Name="XamlLoadButton" Style="{StaticResource RoundedButtonCompact}"
                      Background="{DynamicResource DA06Panel3}" Foreground="#212121"
                      Click="XamlLoadButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 15 -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA06Panel4}" Background="{DynamicResource DA06Panel5}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="NativeLoadLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA06Panel4}"/>
                        <TextBlock Name="NativeLoadDesc" FontSize="12" Margin="0,3"/>
                        <TextBox  Name="NativeLoadInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button   Name="NativeLoadButton" Style="{StaticResource RoundedButtonCompact}"
                      Background="{DynamicResource DA06Panel4}" Foreground="#212121"
                      Click="NativeLoadButton_Click"/>
                    </StackPanel>
                </Border>

            </UniformGrid>
        </StackPanel>
    </ScrollViewer>
</Window>
