<Window x:Class="NetFrmk_Desktop_InsecureApp.DA01InjectionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title=""
        Height="1000" Width="1600"
        WindowStartupLocation="CenterScreen">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16">

            <!-- Header / Language -->
            <DockPanel Margin="0,0,0,12">
                <TextBlock x:Name="TitleText" DockPanel.Dock="Left" FontSize="20" FontWeight="Bold"
                   Foreground="{DynamicResource DA01Panel7}"/>
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Border CornerRadius="6" Padding="6,2" BorderThickness="1"
                  BorderBrush="{DynamicResource DA01Panel7}" Background="{DynamicResource DA01Panel2}" Margin="8,0,0,0">
                        <ComboBox x:Name="LanguageSelector" Width="140" SelectionChanged="LanguageSelector_Changed">
                            <ComboBoxItem>English</ComboBoxItem>
                            <ComboBoxItem>Français</ComboBoxItem>
                        </ComboBox>
                    </Border>
                </StackPanel>
            </DockPanel>

            <TextBlock x:Name="IntroText" Margin="0,0,0,16" Foreground="{DynamicResource DA01Panel7}"/>

            <!-- Cards -->
            <UniformGrid Columns="5" Rows="3">

                <!-- 1 SQL Injection -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA01Panel2}" Background="{DynamicResource DA01Panel7}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="SqlLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA01Panel2}"/>
                        <TextBlock Name="SqlDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="SqlInput" Style="{StaticResource RoundedTextBox}" Width="360" Margin="0,10,0,8"/>
                        <Button Name="SqlButton" Style="{StaticResource RoundedButton}" Background="{DynamicResource DA01Panel2}" Foreground="#212121" Click="SqlButton_Click" Width="220"/>
                        <TextBlock Name="SqlResult" Margin="8,8,0,0" Foreground="{DynamicResource DA01Panel2}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 2 OS Command -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA01Panel3}" Background="{DynamicResource DA01Panel6}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="CmdLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA01Panel3}"/>
                        <TextBlock Name="CmdDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="CmdInput" Style="{StaticResource RoundedTextBox}" Width="360" Margin="0,10,0,8"/>
                        <Button Name="CmdButton" Style="{StaticResource RoundedButton}" Background="{DynamicResource DA01Panel3}" Foreground="#212121" Click="CmdButton_Click" Width="220"/>
                        <TextBlock Name="CmdResult" Margin="8,8,0,0" Foreground="{DynamicResource DA01Panel3}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 3 LDAP -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA01Panel4}" Background="{DynamicResource DA01Panel5}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="LdapLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA01Panel4}"/>
                        <TextBlock Name="LdapDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="LdapInput" Style="{StaticResource RoundedTextBox}" Width="360" Margin="0,10,0,8"/>
                        <Button Name="LdapButton" Style="{StaticResource RoundedButton}" Background="{DynamicResource DA01Panel4}" Foreground="#212121" Click="LdapButton_Click" Width="220"/>
                        <TextBlock Name="LdapResult" Margin="8,8,0,0" Foreground="{DynamicResource DA01Panel4}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 4 XPath -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA01Panel5}" Background="{DynamicResource DA01Panel4}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="XpathLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA01Panel5}"/>
                        <TextBlock Name="XpathDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="XpathInput" Style="{StaticResource RoundedTextBox}" Width="360" Margin="0,10,0,8"/>
                        <Button Name="XpathButton" Style="{StaticResource RoundedButton}" Background="{DynamicResource DA01Panel5}" Foreground="#212121" Click="XpathButton_Click" Width="220"/>
                        <TextBlock Name="XpathResult" Margin="8,8,0,0" Foreground="{DynamicResource DA01Panel5}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 5 XXE -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA01Panel6}" Background="{DynamicResource DA01Panel3}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="XxeLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA01Panel6}"/>
                        <TextBlock Name="XxeDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="XxeInput" Style="{StaticResource RoundedTextBox}" Width="360" Height="90" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,10,0,8"/>
                        <Button Name="XxeButton" Style="{StaticResource RoundedButton}" Background="{DynamicResource DA01Panel6}" Foreground="#212121" Click="XxeButton_Click" Width="220"/>
                        <TextBlock Name="XxeResult" Margin="8,8,0,0" Foreground="{DynamicResource DA01Panel6}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 6 XSLT -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA01Panel7}" Background="{DynamicResource DA01Panel2}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="XsltLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA01Panel7}"/>
                        <TextBlock Name="XsltDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="XsltInput" Style="{StaticResource RoundedTextBox}" Width="360" Height="90" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,10,0,8"/>
                        <Button Name="XsltButton" Style="{StaticResource RoundedButton}" Background="{DynamicResource DA01Panel7}" Foreground="#212121" Click="XsltButton_Click" Width="220"/>
                        <TextBlock Name="XsltResult" Margin="8,8,0,0" Foreground="{DynamicResource DA01Panel7}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 7 OS Path -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA01Panel2}" Background="{DynamicResource DA01Panel7}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="PathLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA01Panel2}"/>
                        <TextBlock Name="PathDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="PathInput" Style="{StaticResource RoundedTextBox}" Width="360" Margin="0,10,0,8"/>
                        <Button Name="PathButton" Style="{StaticResource RoundedButton}" Background="{DynamicResource DA01Panel2}" Foreground="#212121" Click="PathButton_Click" Width="220"/>
                        <TextBlock Name="PathResult" Margin="8,8,0,0" Foreground="{DynamicResource DA01Panel2}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 8 Expression -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA01Panel3}" Background="{DynamicResource DA01Panel6}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="ExprLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA01Panel3}"/>
                        <TextBlock Name="ExprDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="ExprInput" Style="{StaticResource RoundedTextBox}" Width="360" Margin="0,10,0,8"/>
                        <Button Name="ExprButton" Style="{StaticResource RoundedButton}" Background="{DynamicResource DA01Panel3}" Foreground="#212121" Click="ExprButton_Click" Width="220"/>
                        <TextBlock Name="ExprResult" Margin="8,8,0,0" Foreground="{DynamicResource DA01Panel3}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 9 Regex -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA01Panel4}" Background="{DynamicResource DA01Panel5}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="RegexLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA01Panel4}"/>
                        <TextBlock Name="RegexDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="RegexPatternInput" Style="{StaticResource RoundedTextBox}" Width="360" Margin="0,10,0,4"/>
                        <TextBox Name="RegexSampleInput" Style="{StaticResource RoundedTextBox}" Width="360" Margin="0,4,0,8"/>
                        <Button Name="RegexButton" Style="{StaticResource RoundedButton}" Background="{DynamicResource DA01Panel4}" Foreground="#212121" Click="RegexButton_Click" Width="220"/>
                        <TextBlock Name="RegexResult" Margin="8,8,0,0" Foreground="{DynamicResource DA01Panel4}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 10 Proc Args -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA01Panel5}" Background="{DynamicResource DA01Panel4}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="ArgsLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA01Panel5}"/>
                        <TextBlock Name="ArgsDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="ArgsExeInput" Style="{StaticResource RoundedTextBox}" Width="360" Margin="0,10,0,4"/>
                        <TextBox Name="ArgsArgsInput" Style="{StaticResource RoundedTextBox}" Width="360" Margin="0,4,0,8"/>
                        <Button Name="ArgsButton" Style="{StaticResource RoundedButton}" Background="{DynamicResource DA01Panel5}" Foreground="#212121" Click="ArgsButton_Click" Width="220"/>
                        <TextBlock Name="ArgsResult" Margin="8,8,0,0" Foreground="{DynamicResource DA01Panel5}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 11 CSV -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA01Panel6}" Background="{DynamicResource DA01Panel3}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="CsvLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA01Panel6}"/>
                        <TextBlock Name="CsvDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="CsvInput" Style="{StaticResource RoundedTextBox}" Width="360" Margin="0,10,0,8"/>
                        <Button Name="CsvButton" Style="{StaticResource RoundedButton}" Background="{DynamicResource DA01Panel6}" Foreground="#212121" Click="CsvButton_Click" Width="220"/>
                        <TextBlock Name="CsvResult" Margin="8,8,0,0" Foreground="{DynamicResource DA01Panel6}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 12 PowerShell -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA01Panel7}" Background="{DynamicResource DA01Panel2}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="PsLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA01Panel7}"/>
                        <TextBlock Name="PsDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="PsInput" Style="{StaticResource RoundedTextBox}" Width="360" Margin="0,10,0,8"/>
                        <Button Name="PsButton" Style="{StaticResource RoundedButton}" Background="{DynamicResource DA01Panel7}" Foreground="#212121" Click="PsButton_Click" Width="220"/>
                        <TextBlock Name="PsResult" Margin="8,8,0,0" Foreground="{DynamicResource DA01Panel7}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 13 XAML -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA01Panel2}" Background="{DynamicResource DA01Panel7}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="XamlLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA01Panel2}"/>
                        <TextBlock Name="XamlDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="XamlInput" Style="{StaticResource RoundedTextBox}" Width="360" Height="90" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,10,0,8"/>
                        <Button Name="XamlButton" Style="{StaticResource RoundedButton}" Background="{DynamicResource DA01Panel2}" Foreground="#212121" Click="XamlButton_Click" Width="220"/>
                        <TextBlock Name="XamlResult" Margin="8,8,0,0" Foreground="{DynamicResource DA01Panel2}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 14 Reflection -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA01Panel3}" Background="{DynamicResource DA01Panel6}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="ReflLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA01Panel3}"/>
                        <TextBlock Name="ReflDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="ReflInput" Style="{StaticResource RoundedTextBox}" Width="360" Margin="0,10,0,8"/>
                        <Button Name="ReflButton" Style="{StaticResource RoundedButton}" Background="{DynamicResource DA01Panel3}" Foreground="#212121" Click="ReflButton_Click" Width="220"/>
                        <TextBlock Name="ReflResult" Margin="8,8,0,0" Foreground="{DynamicResource DA01Panel3}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 15 Assembly Load -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA01Panel4}" Background="{DynamicResource DA01Panel5}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="AsmLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA01Panel4}"/>
                        <TextBlock Name="AsmDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="AsmInput" Style="{StaticResource RoundedTextBox}" Width="360" Margin="0,10,0,8"/>
                        <Button Name="AsmButton" Style="{StaticResource RoundedButton}" Background="{DynamicResource DA01Panel4}" Foreground="#212121" Click="AsmButton_Click" Width="220"/>
                        <TextBlock Name="AsmResult" Margin="8,8,0,0" Foreground="{DynamicResource DA01Panel4}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

            </UniformGrid>
        </StackPanel>
    </ScrollViewer>
</Window>
