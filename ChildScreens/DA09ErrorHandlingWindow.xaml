<Window x:Class="NetFrmk_Desktop_InsecureApp.DA09ErrorHandlingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title=""
        Height="1000" Width="1600"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Compact variants (assumes RoundedTextBox / RoundedButton exist in App resources) -->
        <Style x:Key="RoundedButtonCompact" TargetType="Button" BasedOn="{StaticResource RoundedButton}">
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="MinWidth" Value="160"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16">
            <!-- Header / Language -->
            <DockPanel Margin="0,0,0,12">
                <TextBlock x:Name="TitleText" DockPanel.Dock="Left" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource DA09Panel7}"/>
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Border CornerRadius="6" Padding="6,2" BorderThickness="1"
                  BorderBrush="{DynamicResource DA09Panel7}" Background="{DynamicResource DA09Panel2}" Margin="8,0,0,0">
                        <ComboBox x:Name="LanguageSelector" Width="140" SelectionChanged="LanguageSelector_Changed">
                            <ComboBoxItem>English</ComboBoxItem>
                            <ComboBoxItem>Français</ComboBoxItem>
                        </ComboBox>
                    </Border>
                </StackPanel>
            </DockPanel>

            <TextBlock x:Name="IntroText" Margin="0,0,0,16" Foreground="{DynamicResource DA09Panel7}"/>

            <!-- 15 cards (5×3) -->
            <UniformGrid Columns="5" Rows="3">

                <!-- 1 Stacktrace to UI -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA09Panel2}" Background="{DynamicResource DA09Panel7}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="StacktraceLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA09Panel2}"/>
                        <TextBlock Name="StacktraceDesc" FontSize="12" Margin="0,3"/>
                        <Button Name="StacktraceButton" Style="{StaticResource RoundedButtonCompact}" Background="{DynamicResource DA09Panel2}" Foreground="#212121" Click="StacktraceButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 2 Uncaught -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA09Panel3}" Background="{DynamicResource DA09Panel6}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="UncaughtLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA09Panel3}"/>
                        <TextBlock Name="UncaughtDesc" FontSize="12" Margin="0,3"/>
                        <Button Name="UncaughtButton" Style="{StaticResource RoundedButtonCompact}" Background="{DynamicResource DA09Panel3}" Foreground="#212121" Click="UncaughtButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 3 Silent swallow -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA09Panel4}" Background="{DynamicResource DA09Panel5}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="SilentSwallowLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA09Panel4}"/>
                        <TextBlock Name="SilentSwallowDesc" FontSize="12" Margin="0,3"/>
                        <Button Name="SilentSwallowButton" Style="{StaticResource RoundedButtonCompact}" Background="{DynamicResource DA09Panel4}" Foreground="#212121" Click="SilentSwallowButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 4 Technical UI -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA09Panel5}" Background="{DynamicResource DA09Panel4}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="TechErrorLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA09Panel5}"/>
                        <TextBlock Name="TechErrorDesc" FontSize="12" Margin="0,3"/>
                        <Button Name="TechErrorButton" Style="{StaticResource RoundedButtonCompact}" Background="{DynamicResource DA09Panel5}" Foreground="#212121" Click="TechErrorButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 5 Verbose log -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA09Panel6}" Background="{DynamicResource DA09Panel3}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="VerboseLogLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA09Panel6}"/>
                        <TextBlock Name="VerboseLogDesc" FontSize="12" Margin="0,3"/>
                        <Button Name="VerboseLogButton" Style="{StaticResource RoundedButtonCompact}" Background="{DynamicResource DA09Panel6}" Foreground="#212121" Click="VerboseLogButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 6 System info leak -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA09Panel7}" Background="{DynamicResource DA09Panel2}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="SystemInfoLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA09Panel7}"/>
                        <TextBlock Name="SystemInfoDesc" FontSize="12" Margin="0,3"/>
                        <Button Name="SystemInfoButton" Style="{StaticResource RoundedButtonCompact}" Background="{DynamicResource DA09Panel7}" Foreground="#212121" Click="SystemInfoButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 7 Inner exception -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA09Panel2}" Background="{DynamicResource DA09Panel7}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="InnerExceptionLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA09Panel2}"/>
                        <TextBlock Name="InnerExceptionDesc" FontSize="12" Margin="0,3"/>
                        <Button Name="InnerExceptionButton" Style="{StaticResource RoundedButtonCompact}" Background="{DynamicResource DA09Panel2}" Foreground="#212121" Click="InnerExceptionButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 8 Throw w/o handler -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA09Panel3}" Background="{DynamicResource DA09Panel6}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="ThrowLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA09Panel3}"/>
                        <TextBlock Name="ThrowDesc" FontSize="12" Margin="0,3"/>
                        <Button Name="ThrowButton" Style="{StaticResource RoundedButtonCompact}" Background="{DynamicResource DA09Panel3}" Foreground="#212121" Click="ThrowButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 9 No global handler -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA09Panel4}" Background="{DynamicResource DA09Panel5}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="NoGlobalHandlerLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA09Panel4}"/>
                        <TextBlock Name="NoGlobalHandlerDesc" FontSize="12" Margin="0,3"/>
                        <Button Name="NoGlobalHandlerButton" Style="{StaticResource RoundedButtonCompact}" Background="{DynamicResource DA09Panel4}" Foreground="#212121" Click="NoGlobalHandlerButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 10 Poor IO/Net -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA09Panel5}" Background="{DynamicResource DA09Panel4}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="PoorIoNetLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA09Panel5}"/>
                        <TextBlock Name="PoorIoNetDesc" FontSize="12" Margin="0,3"/>
                        <Button Name="PoorIoNetButton" Style="{StaticResource RoundedButtonCompact}" Background="{DynamicResource DA09Panel5}" Foreground="#212121" Click="PoorIoNetButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 11 Sensitive log -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA09Panel6}" Background="{DynamicResource DA09Panel3}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="SensitiveLogLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA09Panel6}"/>
                        <TextBlock Name="SensitiveLogDesc" FontSize="12" Margin="0,3"/>
                        <Button Name="SensitiveLogButton" Style="{StaticResource RoundedButtonCompact}" Background="{DynamicResource DA09Panel6}" Foreground="#212121" Click="SensitiveLogButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 12 Crash dump world-readable -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA09Panel7}" Background="{DynamicResource DA09Panel2}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="CrashDumpLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA09Panel7}"/>
                        <TextBlock Name="CrashDumpDesc" FontSize="12" Margin="0,3"/>
                        <Button Name="CrashDumpButton" Style="{StaticResource RoundedButtonCompact}" Background="{DynamicResource DA09Panel7}" Foreground="#212121" Click="CrashDumpButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 13 Rethrow lost stack -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA09Panel2}" Background="{DynamicResource DA09Panel7}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="RethrowLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA09Panel2}"/>
                        <TextBlock Name="RethrowDesc" FontSize="12" Margin="0,3"/>
                        <Button Name="RethrowButton" Style="{StaticResource RoundedButtonCompact}" Background="{DynamicResource DA09Panel2}" Foreground="#212121" Click="RethrowButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 14 Finally masks -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA09Panel3}" Background="{DynamicResource DA09Panel6}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="FinallyMaskLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA09Panel3}"/>
                        <TextBlock Name="FinallyMaskDesc" FontSize="12" Margin="0,3"/>
                        <Button Name="FinallyMaskButton" Style="{StaticResource RoundedButtonCompact}" Background="{DynamicResource DA09Panel3}" Foreground="#212121" Click="FinallyMaskButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 15 Fire-and-forget task (with result text) -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA09Panel4}" Background="{DynamicResource DA09Panel5}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="FireForgetLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA09Panel4}"/>
                        <TextBlock Name="FireForgetDesc" FontSize="12" Margin="0,3"/>
                        <Button Name="FireForgetButton" Style="{StaticResource RoundedButtonCompact}" Background="{DynamicResource DA09Panel4}" Foreground="#212121" Click="FireForgetButton_Click"/>
                        <TextBlock Name="FireForgetResult" Margin="8,8,0,0" Foreground="{DynamicResource DA09Panel4}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

            </UniformGrid>
        </StackPanel>
    </ScrollViewer>
</Window>
