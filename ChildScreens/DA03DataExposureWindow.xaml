<Window x:Class="NetFrmk_Desktop_InsecureApp.DA03DataExposureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title=""
        Height="1000" Width="1600"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Compact variants (for 5×3 cards) -->
        <Style x:Key="RoundedTextBoxCompact" TargetType="TextBox" BasedOn="{StaticResource RoundedTextBox}">
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="MinWidth" Value="180"/>
            <Setter Property="MaxWidth" Value="240"/>
            <Setter Property="Margin" Value="0,6,0,6"/>
        </Style>

        <Style x:Key="RoundedButtonCompact" TargetType="Button" BasedOn="{StaticResource RoundedButton}">
            <Setter Property="Width" Value="180"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16">

            <!-- Header / Language -->
            <DockPanel Margin="0,0,0,12">
                <TextBlock x:Name="TitleText" DockPanel.Dock="Left" FontSize="20" FontWeight="Bold"
                   Foreground="{DynamicResource DA03Panel7}"/>
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Border CornerRadius="6" Padding="6,2" BorderThickness="1"
                  BorderBrush="{DynamicResource DA03Panel7}" Background="{DynamicResource DA03Panel2}" Margin="8,0,0,0">
                        <ComboBox x:Name="LanguageSelector" Width="140" SelectionChanged="LanguageSelector_Changed">
                            <ComboBoxItem>English</ComboBoxItem>
                            <ComboBoxItem>Français</ComboBoxItem>
                        </ComboBox>
                    </Border>
                </StackPanel>
            </DockPanel>

            <TextBlock x:Name="IntroText" Margin="0,0,0,16" Foreground="{DynamicResource DA03Panel7}"/>

            <!-- Single page with 15 cards (5×3) -->
            <UniformGrid Columns="5" Rows="3">

                <!-- 1. Sensitive Data in Memory -->
                <Border CornerRadius="5" BorderThickness="2"
                BorderBrush="{DynamicResource DA03Panel2}" Background="{DynamicResource DA03Panel7}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="MemoryLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA03Panel2}"/>
                        <TextBlock Name="MemoryDesc" FontSize="12" Margin="0,3"/>
                        <TextBox  Name="MemoryInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button   Name="MemoryButton" Style="{StaticResource RoundedButtonCompact}"
                      Background="{DynamicResource DA03Panel2}" Foreground="#212121"
                      Click="MemoryButton_Click"/>
                        <TextBlock Name="MemoryResult" Margin="8,8,0,0" Foreground="{DynamicResource DA03Panel2}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 2. Export Data in Plain CSV -->
                <Border CornerRadius="5" BorderThickness="2"
                BorderBrush="{DynamicResource DA03Panel3}" Background="{DynamicResource DA03Panel6}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="CsvLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA03Panel3}"/>
                        <TextBlock Name="CsvDesc" FontSize="12" Margin="0,3"/>
                        <Button   Name="CsvButton" Style="{StaticResource RoundedButtonCompact}"
                      Background="{DynamicResource DA03Panel3}" Foreground="#212121"
                      Click="CsvButton_Click"/>
                        <TextBlock Name="CsvResult" Margin="8,8,0,0" Foreground="{DynamicResource DA03Panel3}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 3. Logging Sensitive Data -->
                <Border CornerRadius="5" BorderThickness="2"
                BorderBrush="{DynamicResource DA03Panel4}" Background="{DynamicResource DA03Panel5}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="LogLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA03Panel4}"/>
                        <TextBlock Name="LogDesc" FontSize="12" Margin="0,3"/>
                        <TextBox  Name="LogInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button   Name="LogButton" Style="{StaticResource RoundedButtonCompact}"
                      Background="{DynamicResource DA03Panel4}" Foreground="#212121"
                      Click="LogButton_Click"/>
                        <TextBlock Name="LogResult" Margin="8,8,0,0" Foreground="{DynamicResource DA03Panel4}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 4. Public File Share -->
                <Border CornerRadius="5" BorderThickness="2"
                BorderBrush="{DynamicResource DA03Panel5}" Background="{DynamicResource DA03Panel4}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="ShareLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA03Panel5}"/>
                        <TextBlock Name="ShareDesc" FontSize="12" Margin="0,3"/>
                        <TextBox  Name="ShareInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button   Name="ShareButton" Style="{StaticResource RoundedButtonCompact}"
                      Background="{DynamicResource DA03Panel5}" Foreground="#212121"
                      Click="ShareButton_Click"/>
                        <TextBlock Name="ShareResult" Margin="8,8,0,0" Foreground="{DynamicResource DA03Panel5}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 5. Weak Crypto (Base64) -->
                <Border CornerRadius="5" BorderThickness="2"
                BorderBrush="{DynamicResource DA03Panel7}" Background="{DynamicResource DA03Panel2}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="CryptoLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA03Panel7}"/>
                        <TextBlock Name="CryptoDesc" FontSize="12" Margin="0,3"/>
                        <TextBox  Name="CryptoInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button   Name="CryptoButton" Style="{StaticResource RoundedButtonCompact}"
                      Background="{DynamicResource DA03Panel7}" Foreground="#212121"
                      Click="CryptoButton_Click"/>
                        <TextBlock Name="CryptoResult" Margin="8,8,0,0" Foreground="{DynamicResource DA03Panel7}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 6. Hardcoded Secret/Key -->
                <Border CornerRadius="5" BorderThickness="2"
                BorderBrush="{DynamicResource DA03Panel2}" Background="{DynamicResource DA03Panel7}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="HardcodedLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA03Panel2}"/>
                        <TextBlock Name="HardcodedDesc" FontSize="12" Margin="0,3"/>
                        <Button   Name="HardcodedButton" Style="{StaticResource RoundedButtonCompact}"
                      Background="{DynamicResource DA03Panel2}" Foreground="#212121"
                      Click="HardcodedButton_Click"/>
                        <TextBlock Name="HardcodedResult" Margin="8,8,0,0" Foreground="{DynamicResource DA03Panel2}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 7. Sensitive Data in Temp File -->
                <Border CornerRadius="5" BorderThickness="2"
                BorderBrush="{DynamicResource DA03Panel3}" Background="{DynamicResource DA03Panel6}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="TempLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA03Panel3}"/>
                        <TextBlock Name="TempDesc" FontSize="12" Margin="0,3"/>
                        <Button   Name="TempButton" Style="{StaticResource RoundedButtonCompact}"
                      Background="{DynamicResource DA03Panel3}" Foreground="#212121"
                      Click="TempButton_Click"/>
                        <TextBlock Name="TempResult" Margin="8,8,0,0" Foreground="{DynamicResource DA03Panel3}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 8. Verbose Exception With Secret -->
                <Border CornerRadius="5" BorderThickness="2"
                BorderBrush="{DynamicResource DA03Panel5}" Background="{DynamicResource DA03Panel4}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="ExceptionLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA03Panel5}"/>
                        <TextBlock Name="ExceptionDesc" FontSize="12" Margin="0,3"/>
                        <TextBox  Name="ExceptionSecretInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button   Name="ExceptionButton" Style="{StaticResource RoundedButtonCompact}"
                      Background="{DynamicResource DA03Panel5}" Foreground="#212121"
                      Click="ExceptionButton_Click"/>
                        <TextBlock Name="ExceptionResult" Margin="8,8,0,0" Foreground="{DynamicResource DA03Panel5}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 9. Insecure HTTP Transport (POST) – compact 2 columns -->
                <Border CornerRadius="5" BorderThickness="2"
                BorderBrush="{DynamicResource DA03Panel5}" Background="{DynamicResource DA03Panel4}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="HttpLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA03Panel5}"/>
                        <TextBlock Name="HttpDesc"  FontSize="12" Margin="0,3"/>
                        <Grid Margin="0,6,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBox Name="HttpUrlInput"  Style="{StaticResource RoundedTextBoxCompact}"
                       Grid.Row="0" Grid.Column="0" Margin="0,6,6,6"/>
                            <TextBox Name="HttpDataInput" Style="{StaticResource RoundedTextBoxCompact}"
                       Grid.Row="0" Grid.Column="1" Margin="6,6,0,6"/>

                            <Button   Name="HttpButton" Style="{StaticResource RoundedButtonCompact}"
                        Background="{DynamicResource DA03Panel5}" Foreground="#212121"
                        Click="HttpButton_Click" Grid.Row="1" Grid.Column="0" Margin="0,6,6,0"/>
                            <TextBlock Name="HttpResult" Grid.Row="1" Grid.Column="1" Margin="6,10,0,0"
                         Foreground="{DynamicResource DA03Panel5}" FontWeight="Bold"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- 10. Store Cleartext on Disk -->
                <Border CornerRadius="5" BorderThickness="2"
                BorderBrush="{DynamicResource DA03Panel2}" Background="{DynamicResource DA03Panel7}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="ClearLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA03Panel2}"/>
                        <TextBlock Name="ClearDesc" FontSize="12" Margin="0,3"/>
                        <TextBox  Name="ClearInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button   Name="ClearButton" Style="{StaticResource RoundedButtonCompact}"
                      Background="{DynamicResource DA03Panel2}" Foreground="#212121"
                      Click="ClearButton_Click"/>
                        <TextBlock Name="ClearResult" Margin="8,8,0,0" Foreground="{DynamicResource DA03Panel2}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 11. Weak Encryption (ROT13) -->
                <Border CornerRadius="5" BorderThickness="2"
                BorderBrush="{DynamicResource DA03Panel6}" Background="{DynamicResource DA03Panel3}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="Rot13Label" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA03Panel6}"/>
                        <TextBlock Name="Rot13Desc" FontSize="12" Margin="0,3"/>
                        <TextBox  Name="Rot13Input" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button   Name="Rot13Button" Style="{StaticResource RoundedButtonCompact}"
                      Background="{DynamicResource DA03Panel6}" Foreground="#212121"
                      Click="Rot13Button_Click"/>
                        <TextBlock Name="Rot13Result" Margin="8,8,0,0" Foreground="{DynamicResource DA03Panel6}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 12. Insecure HTTP Transport (GET with query) – compact 2 columns -->
                <Border CornerRadius="5" BorderThickness="2"
                BorderBrush="{DynamicResource DA03Panel5}" Background="{DynamicResource DA03Panel4}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="HttpGetLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA03Panel5}"/>
                        <TextBlock Name="HttpGetDesc"  FontSize="12" Margin="0,3"/>
                        <Grid Margin="0,6,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBox Name="HttpGetUrlInput"   Style="{StaticResource RoundedTextBoxCompact}"
                       Grid.Row="0" Grid.Column="0" Margin="0,6,6,6"/>
                            <TextBox Name="HttpGetQueryInput" Style="{StaticResource RoundedTextBoxCompact}"
                       Grid.Row="0" Grid.Column="1" Margin="6,6,0,6"/>

                            <Button   Name="HttpGetButton" Style="{StaticResource RoundedButtonCompact}"
                        Background="{DynamicResource DA03Panel5}" Foreground="#212121"
                        Click="HttpGetButton_Click" Grid.Row="1" Grid.Column="0" Margin="0,6,6,0"/>
                            <TextBlock Name="HttpGetResult" Grid.Row="1" Grid.Column="1" Margin="6,10,0,0"
                         Foreground="{DynamicResource DA03Panel5}" FontWeight="Bold"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- 13. Plaintext Connection String (.config) -->
                <Border CornerRadius="5" BorderThickness="2"
                BorderBrush="{DynamicResource DA03Panel2}" Background="{DynamicResource DA03Panel7}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="CfgLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA03Panel2}"/>
                        <TextBlock Name="CfgDesc" FontSize="12" Margin="0,3"/>
                        <Button   Name="CfgButton" Style="{StaticResource RoundedButtonCompact}"
                      Background="{DynamicResource DA03Panel2}" Foreground="#212121"
                      Click="CfgButton_Click"/>
                        <TextBlock Name="CfgResult" Margin="8,8,0,0" Foreground="{DynamicResource DA03Panel2}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- 14. Windows Registry (plaintext) – compact 2 columns -->
                <Border CornerRadius="5" BorderThickness="2"
                BorderBrush="{DynamicResource DA03Panel6}" Background="{DynamicResource DA03Panel3}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="RegLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA03Panel6}"/>
                        <TextBlock Name="RegDesc"  FontSize="12" Margin="0,3"/>
                        <Grid Margin="0,6,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBox Name="RegNameInput"  Style="{StaticResource RoundedTextBoxCompact}"
                       Grid.Row="0" Grid.Column="0" Margin="0,6,6,6"/>
                            <TextBox Name="RegValueInput" Style="{StaticResource RoundedTextBoxCompact}"
                       Grid.Row="0" Grid.Column="1" Margin="6,6,0,6"/>

                            <Button   Name="RegButton" Style="{StaticResource RoundedButtonCompact}"
                        Background="{DynamicResource DA03Panel6}" Foreground="#212121"
                        Click="RegButton_Click" Grid.Row="1" Grid.Column="0" Margin="0,6,6,0"/>
                            <TextBlock Name="RegResult" Grid.Row="1" Grid.Column="1" Margin="6,10,0,0"
                         Foreground="{DynamicResource DA03Panel6}" FontWeight="Bold"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- 15. Weak Encryption (DES-ECB) -->
                <Border CornerRadius="5" BorderThickness="2"
                BorderBrush="{DynamicResource DA03Panel7}" Background="{DynamicResource DA03Panel2}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="DesLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA03Panel7}"/>
                        <TextBlock Name="DesDesc" FontSize="12" Margin="0,3"/>
                        <TextBox  Name="DesInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button   Name="DesButton" Style="{StaticResource RoundedButtonCompact}"
                      Background="{DynamicResource DA03Panel7}" Foreground="#212121"
                      Click="DesButton_Click"/>
                        <TextBlock Name="DesResult" Margin="8,8,0,0" Foreground="{DynamicResource DA03Panel7}" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

            </UniformGrid>
        </StackPanel>
    </ScrollViewer>
</Window>
