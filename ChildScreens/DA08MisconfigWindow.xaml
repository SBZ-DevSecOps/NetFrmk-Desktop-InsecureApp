<Window x:Class="NetFrmk_Desktop_InsecureApp.DA08MisconfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetFrmk_Desktop_InsecureApp"
        mc:Ignorable="d"
        Title="DA08 – Security Misconfiguration"
        Height="800" Width="1440" Background="#F5F9FA">
    <ScrollViewer>
        <StackPanel Margin="18">
            <TextBlock Name="TitleText" FontWeight="Bold" FontSize="22" Foreground="{DynamicResource DA08Panel1}" Margin="0,0,0,16"/>
            <TextBlock Name="IntroText" FontSize="14" Foreground="{DynamicResource DA08Panel3}" Margin="0,0,0,18"/>
            <ComboBox Name="LanguageSelector" Style="{StaticResource RoundedComboBox}" Width="200" SelectionChanged="LanguageSelector_Changed" Margin="0,0,0,22">
                <ComboBoxItem Content="English"/>
                <ComboBoxItem Content="Français"/>
            </ComboBox>
            <UniformGrid Columns="3" HorizontalAlignment="Center">

                <!-- 1. App.config secrets -->
                <Border CornerRadius="5" BorderBrush="{DynamicResource DA08Panel1}" BorderThickness="2" Background="{DynamicResource DA08Panel7}" Margin="8">
                    <StackPanel Margin="10">
                        <TextBlock Name="AppConfigLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA08Panel1}"/>
                        <TextBlock Name="AppConfigDesc" FontSize="12" Margin="0,3" Foreground="{DynamicResource DA08Panel1}"/>
                        <Button Name="AppConfigButton" Style="{StaticResource RoundedButton}" Width="180" Background="{DynamicResource DA08Panel1}" Foreground="White" Click="AppConfigButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 2. Hardcoded absolute path -->
                <Border CornerRadius="5" BorderBrush="{DynamicResource DA08Panel2}" BorderThickness="2" Background="{DynamicResource DA08Panel6}" Margin="8">
                    <StackPanel Margin="10">
                        <TextBlock Name="AbsPathLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA08Panel2}"/>
                        <TextBlock Name="AbsPathDesc" FontSize="12" Margin="0,3" Foreground="{DynamicResource DA08Panel2}"/>
                        <Button Name="AbsPathButton" Style="{StaticResource RoundedButton}" Width="180" Background="{DynamicResource DA08Panel2}" Foreground="Black" Click="AbsPathButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 3. Verbose logging in prod -->
                <Border CornerRadius="5" BorderBrush="{DynamicResource DA08Panel3}" BorderThickness="2" Background="{DynamicResource DA08Panel5}" Margin="8">
                    <StackPanel Margin="10">
                        <TextBlock Name="VerboseLogLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA08Panel3}"/>
                        <TextBlock Name="VerboseLogDesc" FontSize="12" Margin="0,3" Foreground="{DynamicResource DA08Panel3}"/>
                        <Button Name="VerboseLogButton" Style="{StaticResource RoundedButton}" Width="180" Background="{DynamicResource DA08Panel3}" Foreground="Black" Click="VerboseLogButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 4. Global temp dir -->
                <Border CornerRadius="5" BorderBrush="{DynamicResource DA08Panel4}" BorderThickness="2" Background="{DynamicResource DA08Panel4}" Margin="8">
                    <StackPanel Margin="10">
                        <TextBlock Name="TempDirLabel" FontWeight="Bold" FontSize="16" Foreground="White"/>
                        <TextBlock Name="TempDirDesc" FontSize="12" Margin="0,3" Foreground="White"/>
                        <Button Name="TempDirButton" Style="{StaticResource RoundedButton}" Width="180" Background="White" Foreground="{DynamicResource DA08Panel4}" Click="TempDirButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 5. Private key/certificate in project -->
                <Border CornerRadius="5" BorderBrush="{DynamicResource DA08Panel5}" BorderThickness="2" Background="{DynamicResource DA08Panel3}" Margin="8">
                    <StackPanel Margin="10">
                        <TextBlock Name="PrivKeyLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA08Panel5}"/>
                        <TextBlock Name="PrivKeyDesc" FontSize="12" Margin="0,3" Foreground="{DynamicResource DA08Panel5}"/>
                        <Button Name="PrivKeyButton" Style="{StaticResource RoundedButton}" Width="180" Background="{DynamicResource DA08Panel5}" Foreground="Black" Click="PrivKeyButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 6. Wide permissions (Everyone) -->
                <Border CornerRadius="5" BorderBrush="{DynamicResource DA08Panel6}" BorderThickness="2" Background="{DynamicResource DA08Panel2}" Margin="8">
                    <StackPanel Margin="10">
                        <TextBlock Name="WidePermLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA08Panel6}"/>
                        <TextBlock Name="WidePermDesc" FontSize="12" Margin="0,3" Foreground="{DynamicResource DA08Panel6}"/>
                        <Button Name="WidePermButton" Style="{StaticResource RoundedButton}" Width="180" Background="{DynamicResource DA08Panel6}" Foreground="Black" Click="WidePermButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 7. Writable hosts/system files -->
                <Border CornerRadius="5" BorderBrush="{DynamicResource DA08Panel7}" BorderThickness="2" Background="{DynamicResource DA08Panel1}" Margin="8">
                    <StackPanel Margin="10">
                        <TextBlock Name="HostsLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA08Panel7}"/>
                        <TextBlock Name="HostsDesc" FontSize="12" Margin="0,3" Foreground="{DynamicResource DA08Panel7}"/>
                        <Button Name="HostsButton" Style="{StaticResource RoundedButton}" Width="180" Background="{DynamicResource DA08Panel7}" Foreground="Black" Click="HostsButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 8. Debug mode enabled in prod -->
                <Border CornerRadius="5" BorderBrush="{DynamicResource DA08Panel1}" BorderThickness="2" Background="{DynamicResource DA08Panel5}" Margin="8">
                    <StackPanel Margin="10">
                        <TextBlock Name="DebugLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA08Panel1}"/>
                        <TextBlock Name="DebugDesc" FontSize="12" Margin="0,3" Foreground="{DynamicResource DA08Panel1}"/>
                        <Button Name="DebugButton" Style="{StaticResource RoundedButton}" Width="180" Background="{DynamicResource DA08Panel1}" Foreground="White" Click="DebugButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 9. Weak cryptography -->
                <Border CornerRadius="5" BorderBrush="{DynamicResource DA08Panel2}" BorderThickness="2" Background="{DynamicResource DA08Panel4}" Margin="8">
                    <StackPanel Margin="10">
                        <TextBlock Name="CryptoLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA08Panel2}"/>
                        <TextBlock Name="CryptoDesc" FontSize="12" Margin="0,3" Foreground="{DynamicResource DA08Panel2}"/>
                        <Button Name="CryptoButton" Style="{StaticResource RoundedButton}" Width="180" Background="{DynamicResource DA08Panel2}" Foreground="White" Click="CryptoButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 10. Insecure IPC -->
                <Border CornerRadius="5" BorderBrush="{DynamicResource DA08Panel3}" BorderThickness="2" Background="{DynamicResource DA08Panel6}" Margin="8">
                    <StackPanel Margin="10">
                        <TextBlock Name="IPCLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA08Panel3}"/>
                        <TextBlock Name="IPCDesc" FontSize="12" Margin="0,3" Foreground="{DynamicResource DA08Panel3}"/>
                        <Button Name="IPCButton" Style="{StaticResource RoundedButton}" Width="180" Background="{DynamicResource DA08Panel3}" Foreground="Black" Click="IPCButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 11. Runs as admin by default -->
                <Border CornerRadius="5" BorderBrush="{DynamicResource DA08Panel4}" BorderThickness="2" Background="{DynamicResource DA08Panel7}" Margin="8">
                    <StackPanel Margin="10">
                        <TextBlock Name="AdminLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA08Panel4}"/>
                        <TextBlock Name="AdminDesc" FontSize="12" Margin="0,3" Foreground="{DynamicResource DA08Panel4}"/>
                        <Button Name="AdminButton" Style="{StaticResource RoundedButton}" Width="180" Background="{DynamicResource DA08Panel4}" Foreground="Black" Click="AdminButton_Click"/>
                    </StackPanel>
                </Border>
            </UniformGrid>
        </StackPanel>
    </ScrollViewer>
</Window>