<Window x:Class="NetFrmk_Desktop_InsecureApp.DA10LoggingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title=""
        Height="1000" Width="1600"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Compact variants (assumes RoundedTextBox / RoundedButton exist in App resources) -->
        <Style x:Key="RoundedTextBoxCompact" TargetType="TextBox" BasedOn="{StaticResource RoundedTextBox}">
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="MinWidth" Value="180"/>
            <Setter Property="MaxWidth" Value="260"/>
            <Setter Property="Margin" Value="0,6,0,6"/>
        </Style>
        <Style x:Key="RoundedButtonCompact" TargetType="Button" BasedOn="{StaticResource RoundedButton}">
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="MinWidth" Value="160"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16">

            <!-- Header / Language -->
            <DockPanel Margin="0,0,0,12">
                <TextBlock x:Name="TitleText" DockPanel.Dock="Left" FontSize="20" FontWeight="Bold"
                   Foreground="{DynamicResource DA10Panel7}"/>
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Border CornerRadius="6" Padding="6,2" BorderThickness="1"
                  BorderBrush="{DynamicResource DA10Panel7}" Background="{DynamicResource DA10Panel2}" Margin="8,0,0,0">
                        <ComboBox x:Name="LanguageSelector" Width="140" SelectionChanged="LanguageSelector_Changed">
                            <ComboBoxItem>English</ComboBoxItem>
                            <ComboBoxItem>Français</ComboBoxItem>
                        </ComboBox>
                    </Border>
                </StackPanel>
            </DockPanel>

            <TextBlock x:Name="IntroText" Margin="0,0,0,16" Foreground="{DynamicResource DA10Panel7}"/>

            <!-- 15 cards (5×3) -->
            <UniformGrid Columns="5" Rows="3">

                <!-- 1 No file log -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA10Panel2}" Background="{DynamicResource DA10Panel7}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="NoFileLogLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA10Panel2}"/>
                        <TextBlock Name="NoFileLogDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="NoFileLogInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button Name="NoFileLogButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA10Panel2}" Foreground="#212121"
                    Click="NoFileLogButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 2 No admin log -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA10Panel3}" Background="{DynamicResource DA10Panel6}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="NoAdminLogLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA10Panel3}"/>
                        <TextBlock Name="NoAdminLogDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="NoAdminLogInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button Name="NoAdminLogButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA10Panel3}" Foreground="#212121"
                    Click="NoAdminLogButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 3 No config change log -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA10Panel4}" Background="{DynamicResource DA10Panel5}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="NoConfigLogLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA10Panel4}"/>
                        <TextBlock Name="NoConfigLogDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="NoConfigKeyInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <TextBox Name="NoConfigValInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button Name="NoConfigLogButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA10Panel4}" Foreground="#212121"
                    Click="NoConfigLogButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 4 No auth failure log -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA10Panel5}" Background="{DynamicResource DA10Panel4}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="NoAuthLogLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA10Panel5}"/>
                        <TextBlock Name="NoAuthLogDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="NoAuthLogUserInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <TextBox Name="NoAuthLogPwdInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button Name="NoAuthLogButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA10Panel5}" Foreground="#212121"
                    Click="NoAuthLogButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 5 No forbidden alert -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA10Panel6}" Background="{DynamicResource DA10Panel3}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="NoForbiddenLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA10Panel6}"/>
                        <TextBlock Name="NoForbiddenDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="NoForbiddenUserInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <TextBox Name="NoForbiddenActionInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button Name="NoForbiddenButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA10Panel6}" Foreground="#212121"
                    Click="NoForbiddenButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 6 No deletion log -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA10Panel7}" Background="{DynamicResource DA10Panel2}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="NoDeletionLogLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA10Panel7}"/>
                        <TextBlock Name="NoDeletionLogDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="NoDeletionInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button Name="NoDeletionLogButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA10Panel7}" Foreground="#212121"
                    Click="NoDeletionLogButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 7 No critical error log -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA10Panel2}" Background="{DynamicResource DA10Panel7}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="NoCritErrorLogLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA10Panel2}"/>
                        <TextBlock Name="NoCritErrorLogDesc" FontSize="12" Margin="0,3"/>
                        <Button Name="NoCritErrorLogButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA10Panel2}" Foreground="#212121"
                    Click="NoCritErrorLogButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 8 Debug-only logging -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA10Panel3}" Background="{DynamicResource DA10Panel6}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="DebugOnlyLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA10Panel3}"/>
                        <TextBlock Name="DebugOnlyDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="DebugOnlyInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button Name="DebugOnlyButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA10Panel3}" Foreground="#212121"
                    Click="DebugOnlyButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 9 No rotation -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA10Panel4}" Background="{DynamicResource DA10Panel5}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="NoRotationLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA10Panel4}"/>
                        <TextBlock Name="NoRotationDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="NoRotationInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button Name="NoRotationButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA10Panel4}" Foreground="#212121"
                    Click="NoRotationButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 10 World-writable file -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA10Panel5}" Background="{DynamicResource DA10Panel4}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="WorldWriteLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA10Panel5}"/>
                        <TextBlock Name="WorldWriteDesc" FontSize="12" Margin="0,3"/>
                        <Button Name="WorldWriteButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA10Panel5}" Foreground="#212121"
                    Click="WorldWriteButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 11 Open log folder -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA10Panel6}" Background="{DynamicResource DA10Panel3}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="OpenFolderLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA10Panel6}"/>
                        <TextBlock Name="OpenFolderDesc" FontSize="12" Margin="0,3"/>
                        <Button Name="OpenFolderButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA10Panel6}" Foreground="#212121"
                    Click="OpenFolderButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 12 Cleartext secrets -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA10Panel7}" Background="{DynamicResource DA10Panel2}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="CleartextSecretsLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA10Panel7}"/>
                        <TextBlock Name="CleartextSecretsDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="CleartextSecretsUserInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <TextBox Name="CleartextSecretsPwdInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button Name="CleartextSecretsButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA10Panel7}" Foreground="#212121"
                    Click="CleartextSecretsButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 13 Log Injection / Forging -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA10Panel2}" Background="{DynamicResource DA10Panel7}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="LogInjLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA10Panel2}"/>
                        <TextBlock Name="LogInjDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="LogInjUserInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <TextBox Name="LogInjActionInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button Name="LogInjButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA10Panel2}" Foreground="#212121"
                    Click="LogInjButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 14 Insecure remote logging (HTTP) -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA10Panel3}" Background="{DynamicResource DA10Panel6}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="RemoteLogLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA10Panel3}"/>
                        <TextBlock Name="RemoteLogDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="RemoteLogUrlInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <TextBox Name="RemoteLogMsgInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button Name="RemoteLogButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA10Panel3}" Foreground="#212121"
                    Click="RemoteLogButton_Click"/>
                    </StackPanel>
                </Border>

                <!-- 15 Sensitive data in Event Log -->
                <Border CornerRadius="5" BorderThickness="2" BorderBrush="{DynamicResource DA10Panel4}" Background="{DynamicResource DA10Panel5}" Margin="8">
                    <StackPanel Margin="14">
                        <TextBlock Name="EventLogLabel" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource DA10Panel4}"/>
                        <TextBlock Name="EventLogDesc" FontSize="12" Margin="0,3"/>
                        <TextBox Name="EventLogUserInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <TextBox Name="EventLogTokenInput" Style="{StaticResource RoundedTextBoxCompact}"/>
                        <Button Name="EventLogButton" Style="{StaticResource RoundedButtonCompact}"
                    Background="{DynamicResource DA10Panel4}" Foreground="#212121"
                    Click="EventLogButton_Click"/>
                    </StackPanel>
                </Border>

            </UniformGrid>
        </StackPanel>
    </ScrollViewer>
</Window>
